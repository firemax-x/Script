local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Key Tab", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})
local KeyTab = Window:MakeTab({Name = "Key Tab", Icon = "rbxassetid://4483345998", PremiumOnly = false})

local FireHubKey = "Test"
local attempts = 3
local inputPassword
local timer = 10
local timerLabel = KeyTab:AddLabel("Timer: " .. timer .. " segundos")
local timerRunning = true

local attemptsLabel = KeyTab:AddLabel("Tentativas restantes: " .. attempts)

KeyTab:AddTextbox({
    Name = "Digite a Senha",
    Default = "senha aqui",
    TextDisappear = true,
    Callback = function(Value)
        inputPassword = Value
    end    
})

KeyTab:AddButton({
    Name = "Verificar Senha",
    Callback = function()
        if inputPassword == FireHubKey then
            print("Acerto!")
            attemptsLabel:Set("Senha correta!")
            timerRunning = false  -- Para o timer quando acertar a senha
        else
            attempts = attempts - 1
            print("Errou! Tentativas restantes: " .. attempts)
            attemptsLabel:Set("Tentativas restantes: " .. attempts)
            if attempts <= 0 then
                game.Players.LocalPlayer:Kick("NÃºmero de tentativas excedido.")
            end
        end
    end    
})

-- Timer
spawn(function()
    while timerRunning and timer > 0 do
        wait(1)
        timer = timer - 1
        timerLabel:Set("Timer: " .. timer .. " segundos")
        if timer == 0 then
            game.Players.LocalPlayer:Kick("Tempo esgotado!")
        end
    end
end)
